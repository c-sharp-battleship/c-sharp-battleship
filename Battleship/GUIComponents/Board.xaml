<Window x:Class="Battleship.GUIComponents.Board"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="Board" Height="450" Width="800">
    <Canvas x:Name="CanvasMain" Height="500" Width="800"
            PreviewMouseMove="CanvasMain_OnPreviewMouseMove"
            PreviewMouseDown="CanvasMain_OnPreviewMouseDown"
            PreviewMouseUp="CanvasMain_OnPreviewMouseUp" Margin="0,0,0,-17">
        <Canvas.Background>
            <VisualBrush TileMode="Tile" Stretch="Uniform" Viewport="20,20,20,20" ViewportUnits="Absolute">
                <VisualBrush.Visual>
                    <Rectangle Width="20" Height="20" Fill="White" Stroke="Black" StrokeThickness="0.1"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Canvas.Background>
    </Canvas>
</Window>
