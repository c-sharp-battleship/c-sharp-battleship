<Window x:Class="Battleship.GUIComponents.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="About Battleship" Height="150" Width="375">
    <Grid Margin="0,0,0,0">
        <Label x:Name="GameLabel" Content="Battleship: A Game of Adventure and Conquest" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="CopyrightLabel" Content="Copyright © 2022: Lincoln, David, Sanaaia, Gerson, and Samuel" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Click="CloseButton_Click" Width="303"/>
    </Grid>
</Window>
