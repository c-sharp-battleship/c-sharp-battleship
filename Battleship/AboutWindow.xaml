<Window x:Class="Battleship.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About Battleship" Height="200" Width="400">
    <Grid Margin="0,0,0,0">
        <StackPanel Orientation="Vertical" Margin="10">
            <Label x:Name="GameLabel" Content="Battleship: A Game of Adventure and Conquest" Margin="5"/>
            <TextBlock TextWrapping="Wrap" x:Name="CopyrightLabel" Margin="5">
                Copyright © 2022: David Fedchuk, Gerson Eliu Sorto Flores, Lincoln Kaszynski, Sanaaia Okhlopkova, and Samuel Mace.
            </TextBlock>
            <TextBlock Margin="5">
                <Hyperlink 
                    NavigateUri="http://mit-license.org"
                    RequestNavigate="Hyperlink_OnRequestNavigate">
                    MIT License, 2022.
                </Hyperlink>
            </TextBlock>
            <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Width="315" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
