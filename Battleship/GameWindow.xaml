<Window x:Class="Battleship.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="GameWindow" Height="700" Width="800" Loaded="GameWindow_OnLoaded">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid x:Name="Maingrid" ShowGridLines="True">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/GameWindow Background.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button x:Name="AttackBtn" Content="Switch Player" HorizontalAlignment="Center" Margin="0,176,0,0" VerticalAlignment="Top" Height="66" Width="338" Click="AttackBtn_Click_1" FontSize="36" FontFamily="Arial Black">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Rocket.jpg"/>
            </Button.Background>
        </Button>
        <Image x:Name="PlayerOnelabel" HorizontalAlignment="Left" Height="107" Margin="113,26,0,0" VerticalAlignment="Top" Width="160" Source="/Images/Player 1 Turn.jpg" Stretch="Fill"/>
        <Image x:Name="PlayerTwolabel" HorizontalAlignment="Center" Height="107" Margin="0,26,0,0" VerticalAlignment="Top" Width="160" Source="/Images/Player 2 Turn.jpg" Stretch="Fill" RenderTransformOrigin="1.802,0.385"/>
        <Button x:Name="Confirm_Button" Content="Confirm Ship Placement" HorizontalAlignment="Left" Margin="39,176,0,0" VerticalAlignment="Top" Height="66" Width="187" Click="Confirm_Button_Click" Background="#FF4097A8" RenderTransformOrigin="0.184,1.34" FontSize="16"/>
        <Button x:Name="SaveGameButton" Content="Save Game" HorizontalAlignment="Left" Margin="515,26,0,0" VerticalAlignment="Top" Height="66" Width="240" Click="BtnSaveGame_Click" Background="#FF3FAD7F" FontSize="24"/>
        <Button x:Name="BombLoader" Content="Load Bomb" HorizontalAlignment="Left" Margin="601,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.216,-0.981" Height="97" Width="154" Click="BombLoader_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Bomb.jpg"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
