<Window x:Class="Battleship.AdvancedOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-x:Namespace:Battleship"
        mc:Ignorable="d"
        Title="AdvancedOptionsWindow" Height="265" Width="525">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="136*"/>
        </Grid.RowDefinitions>
        <Label Content="Adjustable Fleet Size" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="249" Width="525" Grid.RowSpan="4" Margin="8,0,0,0"/>
        <StackPanel x:Name="RadioButtonGrid" Margin="8,22,78,10" Grid.RowSpan="2" Orientation="Horizontal">
            <RadioButton x:Name="AdjustableFleetSize3RadioButton" Content="3 Ships" Checked="AdjustableFleetSize3RadioButton_Checked"/>
            <RadioButton x:Name="AdjustableFleetSize5RadioButton" Content="5 Ships (Default)" Checked="AdjustableFleetSize5RadioButton_Checked"/>
            <RadioButton x:Name="AdjustableFleetSize7RadioButton" Content="7 Ships" Checked="AdjustableFleetSize7RadioButton_Checked"/>
        </StackPanel>
        <StackPanel Margin="8,11,11,52" Orientation="Horizontal" Grid.RowSpan="2" Grid.Row="1">
            <ComboBox x:Name="AdjustableFleetSize1ComboBox" HorizontalAlignment="Left" Width="64" SelectionChanged="AdjustableFleetSize1ComboBox_SelectionChanged" />
            <ComboBox x:Name="AdjustableFleetSize2ComboBox" HorizontalAlignment="Left" Width="64" SelectionChanged="AdjustableFleetSize2ComboBox_SelectionChanged" />
            <ComboBox x:Name="AdjustableFleetSize3ComboBox" HorizontalAlignment="Left" Width="64" SelectionChanged="AdjustableFleetSize3ComboBox_SelectionChanged" />
            <ComboBox x:Name="AdjustableFleetSize4ComboBox" HorizontalAlignment="Left" Width="64" SelectionChanged="AdjustableFleetSize4ComboBox_SelectionChanged" />
            <ComboBox x:Name="AdjustableFleetSize5ComboBox" HorizontalAlignment="Left" Width="63" SelectionChanged="AdjustableFleetSize5ComboBox_SelectionChanged" />
            <ComboBox x:Name="AdjustableFleetSize6ComboBox" HorizontalAlignment="Left" Width="63" SelectionChanged="AdjustableFleetSize6ComboBox_SelectionChanged" />
            <ComboBox x:Name="AdjustableFleetSize7ComboBox" HorizontalAlignment="Left" Width="63" SelectionChanged="AdjustableFleetSize7ComboBox_SelectionChanged" />
        </StackPanel>
        <Label Content="Adjustable Grid Size" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="27" Width="400" Margin="4,5,0,0" Grid.Row="2"/>
        <StackPanel Margin="8,28,70,6" Grid.Row="2" Orientation="Horizontal">
            <RadioButton x:Name="AdjustableGridSize8RadioButton" Content="8x8" Checked="AdjustableGridSize8RadioButton_Checked"/>
            <RadioButton x:Name="AdjustableGridSize10RadioButton" Content="10x10 (Default)" Checked="AdjustableGridSize10RadioButton_Checked"/>
            <RadioButton x:Name="AdjustableGridSize12RadioButton" Content="12x12" Checked="AdjustableGridSize12RadioButton_Checked"/>
        </StackPanel>
        <Label Content="Other Options" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="24" Width="87" Grid.Row="2" Margin="4,45,0,0" Grid.RowSpan="2"/>
        <CheckBox x:Name="MultipleAttacksPerSuccessfulAttackCheckBox" Content="Multiple Attacks Per Successful Attack" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Width="310" Grid.Row="3" Checked="MultipleAttacksPerSuccessfulAttackCheckBox_Checked"/>
        <CheckBox x:Name="MultipleAttacksPerTurnPerShip" Content="Multiple Attacks Per Turn Per Ship" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Grid.Row="3" Checked="MultipleAttacksPerTurnPerShip_Checked"/>

        <StackPanel Margin="10,58,10,48" Grid.Row="3" Orientation="Horizontal">
            <CheckBox x:Name="EachPlayerCanAttackLargeGridSpaceCheckBox" Content="Each Player Can Attack a 3x3 Grid Space" VerticalAlignment="Center" Checked="EachPlayerCanAttackLargeGridSpaceCheckBox_Checked" Width="252" />
            <ComboBox x:Name="EachPlayerCanAttackLargeGridSpaceComboBox" SelectionChanged="EachPlayerCanAttackLargeGridSpaceComboBox_SelectionChanged" Width="184" />
        </StackPanel>
        <Button x:Name="DefaultOptionsButton" Content="Default Options" Margin="10,93,263,10" Click="DefaultOptionsButton_Click" Grid.Row="3"/>
        <Button x:Name="ExitButton" Content="Exit" Margin="262,93,10,10" Click="ExitButton_Click" Grid.Row="3"/>
    </Grid>
</Window>
