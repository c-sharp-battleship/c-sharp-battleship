<Window x:Class="Battleship.AdvancedOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="Advanced Options" Height="350" Width="550" Loaded="AdvancedOptionsWindow_OnLoaded">
    <Grid>
        <StackPanel Margin="5">
            <Label Content="Adjustable Fleet Size" />
            <Button Content="Custom Fleet" Name="CustomFleetButton" Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Click="CustomFleetButton_Click"></Button>
            <Label Content="Adjustable Grid Size"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <RadioButton Name="AdjustableGridSize8RadioButton" Content="8x8" Checked="AdjustableGridSize8RadioButton_Checked"/>
                <RadioButton Name="AdjustableGridSize10RadioButton" Content="10x10 (Default)" Margin="10,0,0,0" Checked="AdjustableGridSize10RadioButton_Checked"/>
                <RadioButton Name="AdjustableGridSize12RadioButton" Content="12x12" Margin="10,0,0,0" Checked="AdjustableGridSize12RadioButton_Checked"/>
            </StackPanel>
            
            <Label Content="Other Options" />
            <CheckBox Name="MultipleAttacksPerSuccessfulAttackCheckBox" Content="Multiple Attacks Per Successful Attack" Margin="5" Checked="MultipleAttacksPerSuccessfulAttackCheckBox_Checked"/>
            <CheckBox Name="MultipleAttacksPerTurnPerShip" Content="Multiple Attacks Per Turn Per Ship" Margin="5" Checked="MultipleAttacksPerTurnPerShip_Checked"/>
            
            <StackPanel  Orientation="Horizontal" Margin="5">
                <CheckBox x:Name="EachPlayerCanAttackLargeGridSpaceCheckBox" Content="Each Player Can Attack a 3x3 Grid Space" Checked="EachPlayerCanAttackLargeGridSpaceCheckBox_Checked"/>
                <ComboBox x:Name="EachPlayerCanAttackLargeGridSpaceComboBox" Width="250" Margin="20,0,0,0" SelectionChanged="EachPlayerCanAttackLargeGridSpaceComboBox_SelectionChanged">
                    <ComboBoxItem>1</ComboBoxItem>
                    <ComboBoxItem>2</ComboBoxItem>
                    <ComboBoxItem>3</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Name="DefaultOptionsButton" Content="Default Options" Click="DefaultOptionsButton_Click" Width="250" Margin="5"/>
                <Button Name="ExitButton" Content="Exit" Click="ExitButton_Click" Width="250" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
